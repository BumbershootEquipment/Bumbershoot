<!DOCTYPE html>
<html ng-app="bumbershoot">
<head>
  <title>Bumbershoot</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>
</head>
<body ng-controller="MainCtrl">
	<div class="container">
		<ui-view></ui-view>
	</div>

	<script type="text/ng-template" id="/home.html">
		<div class='page-header'>
			<h1> Bumbershoot </h1>
		</div>

		<div ng-repeat="item in items | orderBy :'category'">
			{{item.name}} in {{item.category}} category. Picture: {{item.image}}
			<span>
				<a href="#/items/{{$index}}">View Details</a>
			</span>
		</div>
		<form ng-click="addItem()">
			<input type="text" ng-model="name"></input>
			<button type="submit">Post</button>
		</form>
	</script>

	<script type="text/ng-template" id="/items.html">
		<div class="page-header">
			<h3>
				<p>{{item.name}}</p>
			</h3>
		</div>
		<div>
			<p>Product color - {{item.details.color}}</p>
			<p>Product size - {{item.details.size}}</p>
			<p>Product description - {{item.details.description}}</p>
		</div>
		<form ng-submit="addDetail()"
			<div>
				<input type="text"
					placeholder="Description"
					ng-model="description"></input>
				<input type="text"
					placeholder="Color"
					ng-model="color"></input>
				<input type="text"
					placeholder="Size"
					ng-model="size"></input>
				<button type="submit">Create</button>
			</div>
		</form>
	</script>

</body>
</html>
